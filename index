                                <Star size={28} className="fill-current" />
                                å…¬ä½ˆç­”æ¡ˆ
                            </button>
                        </div>
                    );
                }

                return (
                    <div className="text-center animate-fade-in-up">
                        <h2 className="text-3xl font-bold text-gray-800 mb-2">ç­”æ¡ˆæ˜¯ï¼š{currentCelebrity.name}</h2>
                        <p className="text-gray-500 mb-6">å¤§å®¶çŒœå°äº†å—ï¼Ÿ</p>
                        
                        <button
                            onClick={handleNextRound}
                            className="w-full bg-green-600 hover:bg-green-700 text-white text-xl font-bold py-4 px-6 rounded-xl shadow-lg transition transform hover:scale-105 flex items-center justify-center gap-2"
                        >
                            {currentRound < gameData.length - 1 ? "ä¸‹ä¸€é¡Œ" : "æŸ¥çœ‹æˆç¸¾"} <ArrowRight size={24} />
                        </button>
                    </div>
                );
            };

            const TopRightControls = ({ isDarkBg }) => (
                <div className="absolute top-4 right-4 flex gap-2 z-50">
                    <button 
                        onClick={toggleFullScreen}
                        className={`p-2 rounded-full transition shadow-sm backdrop-blur-sm ${isDarkBg ? 'bg-white/20 text-white hover:bg-white/40' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}`}
                        title={isFullscreen ? "é€€å‡ºå…¨è¢å¹•" : "å…¨è¢å¹•"}
                    >
                        {isFullscreen ? <Minimize size={24} /> : <Maximize size={24} />}
                    </button>
                </div>
            );

            // ä¾æ“šç‹€æ…‹æ¸²æŸ“ä¸åŒçš„ç•«é¢
            const renderScreen = () => {
                if (gameStatus === 'start') {
                    return (
                        <div className="min-h-screen bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center p-4 relative overflow-hidden">
                            <TopRightControls isDarkBg={true} />
                            <div className="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center z-10">
                                <Grid className="w-20 h-20 text-indigo-500 mx-auto mb-6" />
                                <h1 className="text-4xl font-bold text-gray-800 mb-4">çŒœçŒœæˆ‘æ˜¯èª°ï¼Ÿ</h1>
                                <p className="text-gray-600 mb-8 text-lg">
                                    <span className="font-bold text-red-500">å…¨æ–°ç©æ³•ï¼æ“æ“æ¨‚ç‰ˆ</span>
                                    <br />
                                    ç…§ç‰‡è¢«æ“‹ä½å›‰ï¼è«‹å¤§å®¶ä¸€èµ·ã€Œæˆ³ã€é–‹æ ¼å­
                                    <br />
                                    æ…¢æ…¢æ­æ›‰ç¥ç¥•çš„å¤§æ˜æ˜Ÿï¼
                                </p>
                                <button 
                                    onClick={handleStartGame}
                                    className="w-full bg-indigo-600 hover:bg-indigo-700 text-white text-xl font-bold py-4 px-6 rounded-xl transition transform hover:scale-105 flex items-center justify-center gap-2"
                                >
                                    <Play size={24} /> é–‹å§‹éŠæˆ²
                                </button>
                            </div>
                        </div>
                    );
                }

                if (gameStatus === 'finished') {
                    return (
                        <div className="min-h-screen bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center p-4 relative">
                            <TopRightControls isDarkBg={true} />
                            <div className="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center">
                                <CheckCircle className="w-20 h-20 text-green-500 mx-auto mb-6" />
                                <h1 className="text-3xl font-bold text-gray-800 mb-4">éŠæˆ²çµæŸï¼</h1>
                                <p className="text-gray-600 mb-8">æ‰€æœ‰çš„é¡Œç›®éƒ½å·²ç¶“çŒœå®Œå›‰ã€‚</p>
                                <button 
                                    onClick={handleRestart}
                                    className="w-full bg-indigo-600 hover:bg-indigo-700 text-white text-xl font-bold py-3 px-6 rounded-xl transition flex items-center justify-center gap-2"
                                >
                                    <RotateCcw size={24} /> å†ç©ä¸€æ¬¡
                                </button>
                            </div>
                        </div>
                    );
                }

                // Playing State
                return (
                    <div className="min-h-screen bg-gray-100 flex flex-col items-center py-8 px-4 font-sans relative select-none">
                        <TopRightControls isDarkBg={false} />

                        <div className="w-full max-w-lg mb-6 flex justify-between items-center text-gray-500 font-medium mt-8 sm:mt-0">
                            <span>ç¬¬ {currentRound + 1} é¡Œ / å…± {gameData.length} é¡Œ</span>
                            <button 
                                onClick={() => setGameStatus('start')} 
                                className="text-sm hover:text-indigo-600 underline"
                            >
                                å›é¦–é 
                            </button>
                        </div>

                        {/* ç…§ç‰‡èˆ‡æ“æ“æ¨‚å€åŸŸ */}
                        <div className="w-full max-w-lg bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200">
                            <div className="relative bg-gray-900 h-96 w-full flex items-center justify-center group overflow-hidden">
                                
                                {/* åº•åœ– */}
                                <img 
                                    src={currentCelebrity.photos[currentPhotoIndex].url} 
                                    alt="Celebrity" 
                                    className="w-full h-full object-contain pointer-events-none"
                                />
                                
                                {/* æ“æ“æ¨‚é®ç½©å±¤ */}
                                <PokeGrid />

                                {/* æ¨™ç±¤èˆ‡æç¤ºæ–‡å­— (æµ®åœ¨æœ€ä¸Šå±¤) */}
                                <div className="absolute top-4 left-4 bg-black/60 text-white px-3 py-1 rounded-full text-sm font-bold backdrop-blur-sm flex items-center gap-2 pointer-events-none z-20">
                                    <ImageIcon size={16} />
                                    {currentCelebrity.photos[currentPhotoIndex].label}
                                </div>

                                {step === 3 && (
                                    <div className="absolute inset-0 bg-black/40 flex items-end justify-center pb-10 z-30 pointer-events-none">
                                        <div className="bg-green-500 text-white text-4xl font-bold px-8 py-4 rounded-xl shadow-lg transform scale-110 animate-bounce">
                                            {currentCelebrity.name}
                                        </div>
                                    </div>
                                )}
                            </div>

                            <div className="p-6">
                                {/* é€²åº¦æ¢ */}
                                <div className="flex justify-center gap-2 mb-6">
                                    {[0, 1, 2].map((s) => (
                                        <div 
                                            key={s} 
                                            className={`h-2 rounded-full transition-all duration-300 ${
                                                s === currentPhotoIndex ? 'w-8 bg-indigo-600' : 'w-2 bg-gray-300'
                                            }`}
                                        />
                                    ))}
                                    <div className={`h-2 rounded-full transition-all duration-300 ${
                                        step === 3 ? 'w-8 bg-green-500' : 'w-2 bg-gray-300'
                                    }`} />
                                </div>

                                {renderControls()}
                            </div>
                        </div>
                    </div>
                );
            };

            return (
                <React.Fragment>
                    {renderScreen()}
                    <YouTubeBGM />
                </React.Fragment>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<GuessWhoGame />);
    </script>
</body>
